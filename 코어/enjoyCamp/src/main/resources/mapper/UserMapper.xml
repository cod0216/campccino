<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoyCamp.mapper.UserMapper">
    <insert id="registerUser" parameterType="com.ssafy.enjoyCamp.dto.UserDTO">
        INSERT INTO tbl_user (user_id, password, email)
        VALUES (#{userId}, #{password}, #{email});
    </insert>

    <select id="findByUsername" resultType="com.ssafy.enjoyCamp.dto.UserDTO">
        SELECT * FROM tbl_user WHERE user_id = #{userId};
    </select>
</mapper>