<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.campcino.mapper.ReviewMapper">

    <resultMap id="ProductReviewMap" type="com.ssafy.campcino.dto.responseDto.ProductReviewDto">
        <id property="reviewId" column="review_id" />
        <result property="productId" column="product_id" />
        <result property="userId" column="user_id" />
        <result property="rating" column="rating" />
        <result property="comment" column="comment" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <!-- 리뷰 목록 조회 -->
    <select id="findReviewsByProductId" parameterType="int" resultMap="ProductReviewMap">
        SELECT
        review_id,
        product_id,
        user_id,
        rating,
        comment,
        created_at
        FROM tbl_reviews
        WHERE product_id = #{productId}
        ORDER BY created_at DESC
    </select>

    <!-- 리뷰 추가 -->
    <insert id="addReview" parameterType="com.ssafy.campcino.dto.responseDto.ProductReviewDto">
        INSERT INTO tbl_reviews (product_id, user_id, rating, comment)
        VALUES (#{productId}, #{userId}, #{rating}, #{comment})
    </insert>

    <!-- 리뷰 업데이트 -->
    <update id="updateReview" parameterType="com.ssafy.campcino.dto.responseDto.ProductReviewDto">
        UPDATE tbl_reviews
        SET rating = #{rating}, comment = #{comment}
        WHERE review_id = #{reviewId}
    </update>

    <!-- 리뷰 삭제 -->
    <delete id="deleteReview" parameterType="int">
        DELETE FROM tbl_reviews
        WHERE review_id = #{reviewId}
    </delete>
</mapper>
